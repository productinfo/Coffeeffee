<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="product_title" TargetType="Label">
        <Setter Property="LineBreakMode" Value="TailTruncation"/>
        <Setter Property="TextColor" Value="{x:StaticResource green}"/>
        <Setter Property="VerticalTextAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="JosefinSansBold"/>
        <Setter Property="FontSize" Value="28"/>
    </Style>

    <Style x:Key="product_title_large" BasedOn="{x:StaticResource product_title}" TargetType="Label">
        <Setter Property="FontSize" Value="36"/>
    </Style>

    <Style x:Key="product_subtitle" TargetType="Label">
        <Setter Property="TextColor" Value="Orange"/>
        <Setter Property="FontFamily" Value="JosefinSansRegular"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

</ResourceDictionary>